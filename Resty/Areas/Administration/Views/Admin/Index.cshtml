@{
    ViewData["Title"] = "Gallery";
    Layout = "_AdminLayout";

}

<div id="orderList">
    @foreach (var order in ViewBag.Orders)
    {
        if (order != null)
        {
            <div style="border:1px solid black">
                <div>@order.Address</div>
                <div>@order.PhoneNumber</div>
                <div>@order.Email</div>

                <label>FOOD: @order.FoodItem.Name</label>
            </div>

        }
    }
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            app.main.orderHub.connection.on("send", function () {
                app.main.order.updateOrders();
            });
        });
    </script>
}